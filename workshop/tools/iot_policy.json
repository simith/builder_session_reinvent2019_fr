{
  "Version": "2012-10-17",
  "Statement": [{
      "Effect": "Allow",
      "Action": "iot:Connect",
      "Resource": "arn:aws:iot:us-west-2:247866947534:client/${iot:Connection.Thing.ThingName}",
      "Condition": {
        "Bool": {
          "iot:Connection.Thing.IsAttached": [
            "true"
          ]
        }
      }
    },
    {
      "Effect": "Allow",
      "Action": "iot:Publish",
      "Resource": [
        "arn:aws:iot:us-west-2:247866947534:topic/$aws/things/${iot:Connection.Thing.ThingName}/jobs/*",
        "arn:aws:iot:us-west-2:247866947534:topic/$aws/things/${iot:Connection.Thing.ThingName}/shadow/*",
         "arn:aws:iot:us-west-2:247866947534:topic/$aws/things/${iot:Connection.Thing.ThingName}/streams/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Subscribe",
      "Resource": [
        "arn:aws:iot:us-west-2:247866947534:topicfilter/$aws/things/${iot:Connection.Thing.ThingName}/jobs/*",
        "arn:aws:iot:us-west-2:247866947534:topicfilter/$aws/things/${iot:Connection.Thing.ThingName}/shadow/*",
        "arn:aws:iot:us-west-2:247866947534:topicfilter/$aws/things/${iot:Connection.Thing.ThingName}/streams/*"

        
      ]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Receive",
      "Resource": [
        "arn:aws:iot:us-west-2:247866947534:topic/$aws/things/${iot:Connection.Thing.ThingName}/jobs/*",
        "arn:aws:iot:us-west-2:247866947534:topic/$aws/things/${iot:Connection.Thing.ThingName}/shadow/*",
        "arn:aws:iot:us-west-2:247866947534:topic/$aws/things/${iot:Connection.Thing.ThingName}/streams/*"  
      ]
    }
  ]
}
